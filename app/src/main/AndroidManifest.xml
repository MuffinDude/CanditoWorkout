        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Week1.Week1"
            android:label="@string/title_activity_week1"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Week2.Week2"
            android:label="@string/title_activity_week2"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Week3.Week3"
            android:label="@string/title_activity_week3"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Week4.Week4"
            android:label="@string/title_activity_week4"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Week5.Week5"
            android:label="@string/title_activity_week5"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Week6.Week6"
            android:label="@string/title_activity_week6"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".MainTabSettings" />
        <activity android:name=".Settings.SettingsMaxReps" />
        <activity android:name=".Settings.SettingsAccessoryExercises" />
        <activity android:name=".Settings.SettingsOptionalArms" />
        <activity android:name=".Settings.SettingsOptionalLegs"></activity>
    </application>

</manifest>