<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="longerinoentertainment.canditoworkout.MainTabInsert">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/StartingInfo"
                android:layout_marginBottom="20dp"
                android:background="#c8c8c8"
                android:elevation="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Weights are in"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Workday starts at MONDAY"
                    android:id="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="15dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_marginStart="46dp"
                    android:textOff="KG"
                    android:textOn="LBS"
                    android:checked="false"
                    android:layout_alignParentEnd="true"
                    android:textSize="30dp"
                    android:switchPadding="20dp"
                    android:showText="true"
                    android:singleLine="false"
                    android:splitTrack="true"
                    android:nestedScrollingEnabled="false" />
            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MaxWeights"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/AdditionalExes"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="#c8c8c8"
                android:elevation="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="What are your 1RM&apos;s for the following lifts"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/textView3"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="15dp"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Bench Press"
                        android:id="@+id/textView5"
                        android:layout_column="0"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:ems="10"
                        android:id="@+id/editTextBench"
                        android:layout_column="1"
                        android:text="100"
                        android:gravity="right"
                        android:background="#00ffffff" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Squat"
                        android:id="@+id/textView7"
                        android:layout_column="0"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:ems="10"
                        android:id="@+id/editTextSquat"
                        android:layout_column="1"
                        android:text="100"
                        android:gravity="right"
                        android:background="#00ffffff" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Deadlift"
                        android:id="@+id/textView9"
                        android:layout_column="0"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:ems="10"
                        android:id="@+id/editTextDeadlift"
                        android:layout_column="1"
                        android:text="100"
                        android:gravity="right"
                        android:singleLine="false"
                        android:background="#00ffffff" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/saveButton"
                android:layout_alignEnd="@+id/saveButton"
                android:layout_alignParentStart="true"
                android:id="@+id/AdditionalExes"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="#c8c8c8"
                android:elevation="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Choose accessory exes"
                        android:id="@+id/textView11"
                        android:layout_above="@+id/AdditionalExes"
                        android:layout_alignParentStart="true"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Upper Back Exercise #1(horizontal)"
                        android:id="@+id/textView12"
                        android:layout_column="0" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/horizontalScrollView"
                        android:layout_column="0" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Barbell Row"
                                android:id="@+id/button11"
                                android:layout_column="1" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dumbell Row"
                                android:id="@+id/button12"
                                android:layout_column="2" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Machine Row"
                                android:id="@+id/button13"
                                android:layout_column="3" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Button"
                                android:id="@+id/button14"
                                android:layout_column="3" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Shoulder Exercise"
                        android:id="@+id/textView13"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/scrollView"
                        android:layout_column="0" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Standing Dumbell OHP"
                                android:id="@+id/button5"
                                android:layout_column="1" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seated Dumbell OHP"
                                android:id="@+id/button6"
                                android:layout_column="2" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Military Press"
                                android:id="@+id/button10"
                                android:layout_column="3" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lateral Dumbell Raise"
                                android:id="@+id/button4"
                                android:layout_column="3" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Upper Back Exercise 2 (vertical)"
                        android:id="@+id/textView14"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/horizontalScrollView2"
                        android:layout_column="0" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weighted Pull-Up"
                                android:id="@+id/button"
                                android:layout_column="1" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weighted Chin-Up"
                                android:id="@+id/button2"
                                android:layout_column="2" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lat Pulldown"
                                android:id="@+id/button3"
                                android:layout_column="3" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lateral Dumbell Raise"
                                android:id="@+id/button15"
                                android:layout_column="3" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </TableRow>

            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c8c8c8"
                android:elevation="15dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:id="@+id/saveButton"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:id="@+id/resetButton" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
