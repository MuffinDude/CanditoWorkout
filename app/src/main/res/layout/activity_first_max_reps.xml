<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="longerinoentertainment.canditoworkout.FirstTime.FirstMaxReps">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView9" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableLayout2"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/AccessoryExes"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Enter your Max Record for the following lifts: "
                        android:id="@+id/textView"
                        android:layout_below="@+id/textView3"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="15dp"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Bench Press"
                        android:id="@+id/textView70"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/benchText"
                        android:layout_column="1"
                        android:text="100"
                        android:gravity="right"
                        android:background="#00ffffff"
                        android:inputType="number|numberDecimal" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Squat"
                        android:id="@+id/textView71"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:ems="10"
                        android:id="@+id/squatText"
                        android:layout_column="1"
                        android:text="100"
                        android:gravity="right"
                        android:background="#00ffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Deadlift"
                        android:id="@+id/textView72"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:ems="10"
                        android:id="@+id/deadText"
                        android:layout_column="1"
                        android:text="100"
                        android:gravity="right"
                        android:singleLine="false"
                        android:background="#00ffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Weights are in"
                android:id="@+id/textView84"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weightSwitch"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignTop="@+id/textView84"
                android:layout_marginStart="46dp"
                android:textOff="KG"
                android:textOn="LBS"
                android:checked="false"
                android:layout_alignParentEnd="true"
                android:textSize="30dp"
                android:switchPadding="20dp"
                android:showText="true"
                android:singleLine="false"
                android:splitTrack="true"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>